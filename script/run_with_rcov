#!/usr/bin/env ruby

require 'require_relative'
require 'rcov'
require 'pp'
require_relative '../test/calculator_test.rb'

class Object
  def at_exit
  end
end

overlaps = {}

def test_cases_from_file(test_file)
  existing_classes = ObjectSpace.each_object(Class).to_a
  require test_file
  new_classes = ObjectSpace.each_object(Class).to_a - existing_classes
  new_classes.select{|klass| klass < MiniTest::Unit::TestCase && klass.to_s != 'MiniTest::Spec'}
end
require "ruby-debug";Debugger.start;debugger;
Dir.glob(File.expand_path('../test/**/*.rb', File.dirname(__FILE__))) do |test_file|
  test_cases = test_cases_from_file(test_file)
  pp [test_file, test_cases]

  test_cases.each do |test_case|
    test_case.test_methods.each do |method|
      analyzer = Rcov::CodeCoverageAnalyzer.new
      analyzer.run_hooked do
        test_case.new(nil).send method
      end
      analyzer.analyzed_files.each do |file|
        next if file =~ /gems/
          overlaps[file] ||= {}
        lines, marked_info, count_info = analyzer.data(file)
        marked_info.each_with_index do |elem, index|
          overlaps[file][index] ||= {}
          if elem
            overlaps[file][index][:calculator_test] ||= []
            overlaps[file][index][:calculator_test] << method.to_sym
          end
        end
      end
    end
  end
end
# pp overlaps

