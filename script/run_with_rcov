#!/usr/bin/env ruby

require 'test/unit'
require 'rcov'
require 'pp'
require 'mocha'

module Overlaps
  @@data = {}
  def self.data
    @@data
  end

  @@code_lines = {}
  def self.code_lines
    @@code_lines
  end

  class Report
    def self.puke_out_report
      smelly_lines = {}
      Overlaps.data.each do |file, lines|
        lines.each do |line_number, test_case|
          if test_case.keys.size > 1
            smelly_lines[file] ||= []
            smelly_lines[file] << line_number
          end
        end
      end
      smelly_lines.each do |file, lines|
        puts file
        lines.sort.each do |line|
          puts "#{line}: #{Overlaps.code_lines[file][line]}"
        end
      end
    end
  end
end

module Test
  module Unit
    class AutoRunner
      alias :run_without_analyzer :run
      def run
        result = run_without_analyzer
        Overlaps::Report.puke_out_report
#        pp Overlaps.data
        result
      end
    end
  end
end

module Test
  module Unit
    class TestCase
      alias :run_without_analyzer :run
      def run(*args, &block)
        analyzer = Rcov::CodeCoverageAnalyzer.new
        analyzer.run_hooked do
          run_without_analyzer(*args, &block)
        end
        analyzer.analyzed_files.each do |file|
          next if file =~ /gems/ || file =~ /ruby-1.8.7-p334/
          Overlaps.data[file] ||= {}
          lines, marked_info, count_info = analyzer.data(file)
          Overlaps.code_lines[file] = lines
          marked_info.each_with_index do |elem, index|
            Overlaps.data[file][index] ||= {}
            if elem
              Overlaps.data[file][index][self.class.to_s] ||= []
              Overlaps.data[file][index][self.class.to_s] << self.method_name.to_sym
            end
          end
        end
      end
    end
  end
end

Dir.glob(File.expand_path('../test/**/*.rb', File.dirname(__FILE__))) do |test_file|
  require test_file
end
